/* tasks 页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 表单样式 */
.form-item {
  margin-bottom: 20rpx;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-item-half {
  flex: 1;
}

.form-input {
  width: 100%;
  height: 72rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.form-input:focus {
  border-color: #007AFF;
  background: white;
}

/* 按钮样式 */
.btn-primary {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

.btn-secondary {
  width: 100%;
  height: 72rpx;
  background: #f8f9fa;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 32rpx;
}

.divider {
  height: 1rpx;
  background: #e0e0e0;
  margin: 30rpx 0;
}

/* 任务项样式 */
.task-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.task-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.task-header {
  margin-bottom: 20rpx;
}

.task-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.task-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.ai-badge {
  background: #e3f2fd;
  color: #1976d2;
}

.task-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-top: 8rpx;
}

/* 进度条样式 */
.progress-section {
  margin: 24rpx 0;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #666;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 任务信息 */
.task-info {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin: 20rpx 0;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.task-reward, .task-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.reward-label, .rating-label {
  font-size: 24rpx;
  color: #999;
}

.reward-value {
  font-size: 26rpx;
  color: #007AFF;
  font-weight: 500;
}

.rating-value {
  font-size: 26rpx;
  font-weight: 600;
}

/* 操作按钮 */
.task-actions {
  margin-top: 20rpx;
}

.btn-complete {
  width: 100%;
  height: 72rpx;
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.task-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
}

.status-text {
  font-size: 28rpx;
  color: #34C759;
  font-weight: 500;
}

.status-rating {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  display: block;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
  display: block;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-body {
  padding: 20rpx 30rpx 40rpx;
  text-align: center;
}

.modal-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  font-size: 30rpx;
  background: white;
}

.cancel-btn {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.confirm-btn {
  color: #007AFF;
  font-weight: 500;
}

.confirm-btn:disabled {
  color: #ccc;
}
